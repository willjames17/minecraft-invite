---
import Base from "~/layouts/Base.astro";
---

<Base>
  <div class="flex flex-col justify-center items-center w-full sm:w-[90%] md:w-[80%] lg:w-[70%] mx-auto gap-5 py-10 px-4 markdown">
    <h2 class="text-center underline text-4xl text-water-savanna-plateau">RSVP for Jack's Epic Birthday Adventure!</h2>
    <p class="text-white text-xl text-center">Please fill out the form below to let us know how many adventurers will be joining.</p>

    <form name="rsvp" method="POST" data-netlify="true" action="/thank-you" class="w-full max-w-lg bg-dark-75 p-6 rounded-lg">
      <div class="mb-6">
        <label for="name" class="block text-white text-lg font-bold mb-2">Name</label>
        <input type="text" id="name" name="name" placeholder="Your Name" required class="w-full p-3 rounded bg-gray-800 text-white border border-gray-600 placeholder-gray-400" />
      </div>

      <div class="mb-6">
        <label for="kids" class="block text-white text-lg font-bold mb-2">Number of Kids</label>
        <input type="number" id="kids" name="kids" placeholder="0" required min="0" class="w-full p-3 rounded bg-gray-800 text-white border border-gray-600 placeholder-gray-400" />
      </div>

      <div class="mb-6">
        <label for="parents" class="block text-white text-lg font-bold mb-2">Number of Parents</label>
        <input type="number" id="parents" name="parents" placeholder="0" required min="0" class="w-full p-3 rounded bg-gray-800 text-white border border-gray-600 placeholder-gray-400" />
      </div>

      <div class="text-center">
        <button type="submit" class="py-3 px-6 button text-shadow-lg text-2xl">Submit RSVP</button>
      </div>
    </form>
  </div>
</Base>
